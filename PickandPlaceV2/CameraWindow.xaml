<Window x:Class="PickandPlaceV2.CameraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PickandPlaceV2"
        mc:Ignorable="d"
        Title="Camera"   Width="660" Height="550"
          ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner" >

    <StackPanel MinWidth="640">

            <Image x:Name="CapturedImageBox" Width="640" Height="480" />
      
        <Button x:Name="button1" Content="Start Camera" Click="button1_Click" Width="320" Margin="0" />
    </StackPanel>
</Window>
