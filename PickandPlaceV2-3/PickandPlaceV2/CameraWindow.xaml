<Window x:Class="PickandPlaceV2.CameraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PickandPlaceV2"
        mc:Ignorable="d"
        Title="Camera"   Width="820" Height="720"
          ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner" Closing="Window_Closing" >

    <StackPanel MinWidth="800">
<ComboBox x:Name="camera" SelectionChanged="Camera_SelectionChanged" />
            <Image x:Name="CapturedImageBox" Width="800" Height="600" />
      
        <Button x:Name="button1" Content="Start Camera" Click="Button1_Click" Width="320" Margin="10" />
    </StackPanel>
</Window>
